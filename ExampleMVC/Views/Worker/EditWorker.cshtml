@model WorkerModel
@{
    ViewData["Title"] = "Edit worker";
}
<div class="small-pannel">
    <h2>Edit worker</h2>
    @using (Html.BeginForm("EditWorker", "Worker", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        ;
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="@Model.Name" required>
        </div>
        <div class="form-group">
            <label for="surname">Surname</label>
            <input type="text" class="form-control" id="surname" name="surname" value="@Model.Surname" required>
        </div>
        <div class="form-group">
            <label class="form-check-label" for="age">Age</label>
            <input type="number" class="form-control" id="age" name="age" value="@Model.Age" required>
        </div>
        <button type="submit" class="btn btn-success">Edit worker</button>
    }
</div>